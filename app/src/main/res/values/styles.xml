<!-- styles.xml -->
<resources>
    <!-- Button Style Primary -->
    <style name="ButtonPrimary">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textColor">@color/primary_button_text_color</item>
    </style>

    <!-- Button Style Success -->
    <style name="ButtonSuccess">
        <item name="android:background">@drawable/button_success_background</item> <!-- Menggunakan background button_success_background -->
        <item name="android:textColor">@color/success_button_text_color</item>
    </style>

    <!-- Button Style Warning -->
    <style name="ButtonWarning">
        <item name="android:background">@drawable/button_warning_background</item>
        <item name="android:textColor">@color/warning_button_text_color</item>
    </style>
</resources>
